-(require 'czech)
-(set! czech-mbrola_database "/usr/local/mbrola/cz2/cz2")
-(set! mbrola_progname "/usr/local/mbrola/mbrola")
-(voice-location "czech_mbrola_cz2" "/usr/local/mbrola/cz2"
-    "Czech Male, MBROLA")
-(require 'czech-mbrola)
